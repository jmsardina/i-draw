<div id="header-div">
  <div class="left">
    <div id="about">
      <h2>iDraw</h2>
    </div>
  </div>
 
  <div class="right">
    <div class="search">
      <%= form_tag :controller => 'search', :action => 'search', :method => 'get' do %>
        <%= text_field_tag :keyword, params[:keyword], :id => 'search-field' %>
        <%= submit_tag "Search! ", :content => nil %> 
      <% end %> 
    </div>
  </div>
</div>

<table>
  <td>
    <div id="canvasDiv"></div>
  </td>

  <td>
    <div id="cartoons-header"><h4>Choose Your Favorite</h4></div>
    <div id="all-cartoons">
      <img id="solid-white" src="<%= asset_path('solid-white.png') %>"/ height="10px" width="10px">
      <% @cartoons.each do |cartoon| %>
        <div>
          <%= image_tag cartoon.avatar.url(:thumb), class: "cartoon-#{cartoon.id}" %>
        </div>
      <% end %>
    </div>
  </td>

  <td>
    <div id="html5DIV">
      <input type="color" id="html5colorpicker" class="form-control" value="#ff0000">
    </div>
  </td>
</table>


<div id="new-cartoon">
  <%= form_for(@cartoon) do |f| %>
    <%= f.label :name, "Upload an Image!" %><br>
    <%= f.text_field :name, placeholder: "Cartoon Name" %>
    <%= f.file_field :avatar %>
  <% end %>
</div>

<div class="modal-base" id="search-modal-base">
  <div class="modal-main" id="search-modal-main">
    <button id="close-modal">×</button>

    <label><h2>Choose Your Favorite!</h2></label>
    <div id="results-div">
    </div>
  </div>
</div>

<div class="modal-base" id="about-modal-base">
  <div class="modal-main" id="about-modal-main">
    <button id="close-modal">×</button>

    <label><h2>About</h2></label>
    <h4 class="modal-text">iDraw is intended to give children the opportunity to practice using a computer mouse or trackpad while drawing their favorite cartoon charater.  I believe that children learn best while they're having fun.</h4>
  </div>
</div>

<div id="footer">
  <div class="center">
    Made with <3 by <a href="http://people.flatironschool.com/profiles/jennifer-sardina">Jennifer Sardina</a>
  </div>
</div>